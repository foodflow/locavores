
<!DOCTYPE html>
<html lang="en">
  {% set current_route = app.request.attributes.get('_route') %}
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset={{ _charset }}"/>
    <title>{{ project.name }} {% block title %}{% endblock %}</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
    <link rel="stylesheet" href="/custom_css/styles.css">
    <style type="text/css">
      body {
        padding-top: 20px;
        padding-bottom: 40px;
      }

      /* Custom container */
      .container-narrow {
        margin: 0 auto;
        max-width: 700px;
      }
      .container-narrow > hr {
        margin: 30px 0;
      }

      /* Main marketing message and sign up button */
      .jumbotron {
        margin: 60px 0;
        text-align: center;
      }
      .jumbotron h1 {
        font-size: 72px;
        line-height: 1;
      }
      .jumbotron .btn {
        font-size: 21px;
        padding: 14px 24px;
      }

      /* Supporting marketing content */
      .marketing {
        margin: 60px 0;
      }
      .marketing p + h4 {
        margin-top: 28px;
      }
    </style>
    <script>window.jQuery || document.write('<script src="{{ asset('js/jquery.js') }}"><\/script>')</script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    {% block head %}{% endblock %}
  </head>

  <body class="{{ current_route }}">
      
    <div class="container">

      <div class="masthead">
        {{ knp_menu_render('FFWebBundle:Builder:mainMenu', {'nav_type': 'pills', 'pull': 'right'}) }}
        <h3 class="muted">{{ project.name }}</h3>
      </div>
      
      {% for notice in app.session.flashbag.get('notice') %}
        <div class="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button
            <strong>Notice</strong: {{ notice }}
        </div>
      {% endfor %}
      
      <hr />
      
      {% block body %}{% endblock %}
      
      <hr />

      <div class="footer">
        <p>&copy; {{ "now"|date('Y') }} {{ project.name }} v{{ project.version}}</p>
      </div>

    </div> <!-- /container -->
  </body>
</html>