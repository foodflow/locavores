
<!DOCTYPE html>
<html lang="en">
  {% set current_route = app.request.attributes.get('_route') %}
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset={{ _charset }}"/>
    <title>{{ project.name }} {% block title %}{% endblock %}</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
    <link rel="stylesheet" href="/custom_css/styles.css">
   
    <script>window.jQuery || document.write('<script src="{{ asset('js/jquery.js') }}"><\/script>')</script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    {% block head %}{% endblock %}
  </head>

  <body class="{{ current_route }}">
      
    <div class="container">

      <div class="masthead">
        {{ knp_menu_render('FFWebBundle:Builder:mainMenu', {'nav_type': 'pills', 'pull': 'right'}) }}
        <h3 class="muted">{{ project.name }}</h3>
      </div>
      
      {% for notice in app.session.flashbag.get('notice') %}
        <div class="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button
            <strong>Notice</strong: {{ notice }}
        </div>
      {% endfor %}
      
      <hr />
      
      {% block body %}{% endblock %}
      
      <hr />

      <div class="footer">
        <p>&copy; {{ "now"|date('Y') }} {{ project.name }} v{{ project.version}}</p>
      </div>

    </div> <!-- /container -->
  </body>
</html>