{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ingredient</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>From_chef</th>
                <td>{{ entity.fromchef }}</td>
            </tr>
            <tr>
                <th>From_restaurant</th>
                <td>{{ entity.fromrestaurant }}</td>
            </tr>
            <tr>
                <th>Varieties</th>
                <td>{{ entity.varieties }}</td>
            </tr>
            <tr>
                <th>Farms</th>
                <td>{{ entity.farms }}</td>
            </tr>
            <tr>
                <th>Tip</th>
                <td>{{ entity.tip }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
